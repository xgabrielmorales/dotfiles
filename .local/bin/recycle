#!/usr/bin/env bash

# Description: Open a new instance of a binary or focus an existing one
# Dependencies: wmctrl

if [[ $# -lt 1 ]]; then
    echo "No binary specified"
    exit 1
fi

BINARY=$(command -v "$1")
if [[ -z "$BINARY" ]]; then
    echo "Binary not found: $1"
    exit 1
fi

WINDOW=$(wmctrl -l | grep -i "$(basename "$BINARY")" | awk '{print $1}')
if [[ -n "$WINDOW" ]]; then
    wmctrl -ir "$WINDOW" -b remove,hidden
    wmctrl -ia "$WINDOW"
else
    exec "$BINARY" "${@:2}" &
fi
