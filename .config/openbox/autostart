#!/usr/bin/bash

killall -q -9 polybar picom plank


# Restore Wallpaper
/usr/bin/nitrogen --restore &

# Status bar (Polybar)
$HOME/.config/polybar/launch.sh &

# Plank
/usr/bin/plank &

# Compositor
/usr/bin/picom &

# Task Switcher
/usr/bin/skippy-xd --start-daemon &

# Remap keys
/usr/bin/setxkbmap -layout latam -option lv3:menu_switch # Alt-Gr -> Menu
/usr/bin/setxkbmap -layout latam -option ctrl:ralt_rctrl # R-Ctrl -> Alt-Gr

# Disable auto-mute
/usr/bin/amixer -c 2 sset "Auto-Mute Mode" Disabled &

# Notification daemon
/usr/lib/xfce4/notifyd/xfce4-notifyd &

# Keyring
/usr/bin/gnome-keyring-daemon --start --components=secrets &

# Key repeat delay
/usr/bin/xset r rate 250 35 &

# Polkit
if [[ ! $(pidof xfce-polkit) ]]; then
    /usr/lib/xfce-polkit/xfce-polkit &
fi

# Redshift
$HOME/dotfiles/scripts/redshift &
