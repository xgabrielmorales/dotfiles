[user]
    name = Gabriel Morales
    email = gabrielmorales1@protonmail.com
    signingkey = ~/.ssh/Personal/IdentityFiles/id_rsa.pub

[core]
    editor = nvim

[diff]
    external = difft

[push]
    autoSetupRemote = true

[alias]
    s = status
    ss = status --short
    # Show Staged files
    staged = diff --staged
    # Show log decorated
    lod = log --graph --pretty=format:'%C(yellow)%h%Creset%Cred%d%Creset %Cgreen%cr%Creset %s ' --abbrev-commit  --date=relative

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[commit]
    gpgsign = true
    verbose = true

[log]
    date = iso-local

[gpg]
    format = ssh

[includeIf "gitdir:~/Documents/Work/"]
    path = ~/Documents/Work/.gitconfig
